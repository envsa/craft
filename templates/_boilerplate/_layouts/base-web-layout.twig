{# -- Base web layout template that all web requests inherit from -- #}
{% extends "_layouts/global-variables.twig" %}

{%- block htmlPage -%}
{# {% cache %} #}
    {% minify %}
        <!DOCTYPE html>
        {% block htmlTag %}
            <html lang="{{ craft.app.language|slice(0,2) }}">
        {% endblock htmlTag %}
            {% block headTag %}
                <head>
            {% endblock headTag %}
                {% include "_boilerplate/_partials/head-meta" %}
                {# -- Page content that should be included in the <head> -- #}
                {% block headContent %}{% endblock headContent %}
            </head>

            {% block bodyTag %}
                <body class="{{ bodyClass }}" data-icons="{{ craft.twigpack.getModuleUri("sprite.svg") }}">
            {% endblock bodyTag %}
                {# -- Page content that should be included in the <body> -- #}
                {% block bodyContent %}{% endblock bodyContent %}
            </body>
        </html>
    {% endminify %}
{# {% endcache %}   #}
{%- endblock htmlPage -%}
